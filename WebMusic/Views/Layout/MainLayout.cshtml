<script type="text/javascript">
    $(function() {
        $(".new-track-child-buy").click(function() {

            var id = $(this).attr("idTrack");
            var type = $(this).attr("typePro");
            $.ajax({
                url: '@Url.Action("Add", "Cart")',
                dataType: 'json',
                type: 'POST',
                data: JSON.stringify({
                    id: id,
                    type: type
                }),
                contentType: 'application/json; charset=utf-8',
                success: function(data) {
                    if (data !== '') {
                        $.each(data, function(i, item) {
                            if (i === 0) {
                                $("#total_Debt_Menu").text('$' + item);
                                $(this).prop("disabled", true);
                            } else {
                                $("#saleUser_Menu").text('Sale ' + item + '%');
                            }
                        });
                    } else {
                        alert("unsuccess");
                    }
                }
            });
        });
    });

</script>

